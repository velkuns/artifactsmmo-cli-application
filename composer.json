{
  "name": "eureka/eureka-appplication-web",
  "description": "Web Application Eureka Framework - Template App",
  "minimum-stability": "stable",
  "type": "project",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Application\\": "./src",
      "Application\\Script\\": "./scripts"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Application\\Tests\\Unit\\": "./tests/unit"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.1.*||8.2.*||8.3.*",
    "ext-json": "*",

    "eureka/component-console": "^6.2.0",
    "eureka/kernel-console": "^6.0.0",
    "eureka/component-curl": "^3.0.0",
    "lcobucci/clock": "^3.0.0",
    "psr/container": "^2.0.2",
    "psr/clock": "^1.0.0",
    "psr/log": "^3.0.1",
    "symfony/cache": "^6.4.10||^7.1.3",
    "velkuns/artifactsmmo-client": "^1.1.0"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.62.0",
    "maglnet/composer-require-checker": "^4.7.1",
    "phpstan/phpstan": "^1.11.11",
    "phpstan/phpstan-phpunit": "^1.4.0",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.5.30",
    "shipmonk/composer-dependency-analyser": "^1.7.0"
  }
}
